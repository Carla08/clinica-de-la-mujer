extends ../shared/layout
block content
    .row
        form.col.s12(action="/" method="post")
            .row
                .input-field.col.s6
                    input(type="text" id="name" name="name" class="validate")
                    label(for="name") Nombre del empleado
                .input-field.col.s6
                    input(type="text" id="lastName" name="lastName" class="validate")
                    label(for="lastName") Primer Apellido
                .input-field.col.s6
                    input(type="text" id="secondLastName" name="secondLastName" class="validate")
                    label(for="secondLastName") Segundo Apellido
                //.input-field.col.s6
                //    input(type="text" id="department" name="department" class="validate")
                //    label(for="department") Departamento
                .input-field.col.s6
                    select(required name="department")
                        option(value="" class="disabled selected") Seleccione un departamento
                        option(value="Recursos Humanos") Recursos Humanos
                .input-field.col.s6
                    input(type="date" class="datepicker validate" id="hiringDate" name="hiringDate" )
                    label(for="hiringDate") Fecha de Contrataci√≥n
                .input-field.col.s12
                    button(class="btn waves-effect waves-light" type="submit" name="action") Agregar Usuario
                        i(class="material-icons right") send
block script
    script.
        $('.datepicker').pickadate({
            selectMonths: false, // Creates a dropdown to control month
            selectYears: 15 // Creates a dropdown of 15 years to control year
        });
        $(document).ready(function () {
            $('select').material_select();
        });


