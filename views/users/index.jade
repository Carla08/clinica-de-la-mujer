extends ../shared/layout

block content
    a.waves-effect.waves-light.btn(href="new") Agregar Empleado
        i.material-icons.left perm_identity
    table.bordered.highlight.responsive-table.centered
        thead
            tr
                th Nombre
                th Primer apellido
                th Segundo apellido
                th Departamento
                th Fecha de contrataci√≥n
                th
                th
        tbody
            each employee in employees
                tr
                    td !{employee.name}
                    td !{employee.lastName}
                    td !{employee.secondLastName}
                    td !{employee.department}
                    td #{moment(employee.hiringDate).format("DD/MM/YYYY")}
                    td
                        a(href="edit/#{employee._id}" )
                            i.material-icons.delete mode_edit
                    td
                        a(href="delete/#{employee._id}" )
                            i.material-icons.delete delete
